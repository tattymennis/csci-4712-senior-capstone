@using GoalManager.Models
@model ModifyDepartmentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewBag.Title</h1>

<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group form-horizontal">
        <label for="Name">Department Name:</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>

    <div class="form-group form-horizontal">
        <label for="Location">Location:</label>
        <input type="text" name="Location" class="form-control" value="@Model.Location" />
    </div>

    <div class="form-group form-horizontal">
        <label for="Decription">Department Description:</label>
        <textarea type="text" name="Description" class="form-control">@Model.Description</textarea>
    </div>
    <input type="hidden" name="IDRef" value="0" />
    <input type="hidden" name="DID" value="@Model.DID"/>
    <input type="submit" />
</form>