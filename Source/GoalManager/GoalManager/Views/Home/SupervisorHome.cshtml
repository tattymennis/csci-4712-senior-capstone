@using GoalManager.Models
@model SupervisorHomeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Supervisor Home";
}

<h1>@ViewBag.Title</h1>

<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-item navbar-link active" href="~/Goal/CreateGoal">Create Goal</a>
    </li>
    <li class="nav-item">
        <a class="nav-item navbar-link active" href="~/Department/AddCategory">Add Category</a>
    </li>

</ul>

@*Approval List*@
@if (Model.GoalApprovalList.Count != 0)
{
    <h3>New Employee Goals</h3>
    <table class="table table-bordered table-hover table-responsive table-condensed">
        <thead>
            <tr class="active">
                <th>Name</th>
                <th>Title</th>
                <th>Role</th>
                <th>Department</th>
                <th>Goal Title</th>
                <th>Goal Start Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model.GoalApprovalList)
            {
                <tr class="danger">
                    <td>
                        @g.User.FirstName @g.User.LastName
                        <form action="/Goal/ApproveGoal/" method="post">
                            <input type="hidden" name="gid" value="@g.GID" />
                            <input type="submit" value="Approve" />
                        </form>
                        <form action="/Goal/DenyGoal/" method="post">
                            <input type="hidden" name="gid" value="@g.GID" />
                            <input type="submit" value="Deny" />
                        </form>
                    </td>
                    <td>@g.User.Title</td>
                    <td>@g.User.Role</td>
                    <td>@g.User.Department.Name</td>
                    <td>@g.Title</td>
                    <td>@g.StartDate</td>
                </tr>
            }
        </tbody>
    </table>
}

    @*My Goals*@
    @if (Model.PendingGoals.Count != 0)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Pending Goals</h2>
                    <table class="table  table-bordered table-responsive table-condensed">
                        <thead>
                            <tr class="active">
                                <th>Title</th>
                                <th>Category</th>
                                <th>Progress</th>
                                <th>Deadline</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>View Goal</th>
                                <th>Update Goal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var g in Model.PendingGoals)
                {
                    string approval = "";
                    if (g.Status == "Pending")
                    {
                        approval = "alert-info";
                    }

                    else
                    {
                        approval = "success";
                    }
                    <tr class="@approval">
                        <td>@g.Title</td>
                        <td>@g.Category</td>
                        <td>@g.Progress</td>
                        <td>@g.EndDate.ToString("D")</td> <!--Must update Update table to support Date attribute-->
                        <td>@g.Description</td>
                        <td>@g.Status</td>
                        <td>
                            <form action="/Goal/ViewGoal" method="get">
                                <input type="hidden" name="GID" value="@g.GID" />
                                <input type="submit" value="View" />
                            </form>
                        </td>
                        <td>
                            <form action="/Goal/UpdateGoal" method="get">
                                <input type="hidden" name="GIDRef" value="@g.GID" />
                                <input type="submit" value="Update" />
                            </form>
                        </td>
                    </tr>
                            }
                        </tbody>
                    </table>
                </div> <!--End Column-->
            </div> <!--End Row-->
        </div> <!--End Container-->
    }
    <!-- Active Goals -->
    @if (Model.ActiveGoals.Count != 0)
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h3>Active Goals</h3>
                    <table class="table table-bordered table-responsive table-condensed">
                        <thead>
                            <tr class="active">
                                <th>Title</th>
                                <th>Category</th>
                                <th>Progress</th>
                                <th>Deadline</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>View</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var g in Model.ActiveGoals)
                            {
                                string approval = "";
                                if (g.Status == "Pending")
                                {
                                    approval = "danger";
                                }

                                else
                                {
                                    approval = "alert-info";
                                }
                                <tr class=@approval>
                                    <td>@g.Title</td>
                                    <td>@g.Category</td>
                                    <td>@g.Progress</td>
                                    <td>@g.EndDate.ToString("D")</td> <!--Must update Update table to support Date attribute-->
                                    <td>@g.Description</td>
                                    <td>@g.Status</td>
                                    <td>
                                        <form action="/Goal/ViewGoal" method="get">
                                            <input type="hidden" name="GID" value="@g.GID" />
                                            <input type="submit" value="View" />
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/Goal/UpdateGoal" method="post">

                                            <input type="hidden" name="GIDRef" value="@g.GID" />
                                            @Html.AntiForgeryToken()
                                            <input type="submit" value="Update" />
                                        </form>
                                    </td>
                                </tr>
                            }
                            <tr class="alert-info">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <form action="/Goal/CreateGoal" method="get">
                                        <input type="hidden" name="uid" value="@Model.Goals.First().UID" />
                                        <input type="submit" value="Create Goal" />
                                    </form>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div> <!--End Column-->
            </div> <!--End Row-->
        </div> <!--End Container-->

    }

