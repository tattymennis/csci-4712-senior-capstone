@using GoalManager.Models;
@model CreateGoalViewModel



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Goal";
}


<h1>@ViewBag.Title</h1>

@Html.ValidationSummary()

<form method="post">
    <div class="form-group form-horizontal">
        <label for="Title"> Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Goal.Title"/>
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        <select class="form-control">
            <option>Productivity</option>
            <option>Customer Satisfaction </option>
            <option>Self Improvement</option>
        </select>
        <small class="form-text text-muted">Select the Type of Goal this is.</small>
    </div>
    
    <div class="form-group">
        <label for="Deadline">Deadline</label>
        <select class="form-control">
            <option>Quater 1 2017</option>
            <option>Quater 2  2017</option>
            <option>Quater 3 2017</option>
            <option>Quater 4 2017</option>
        </select>
        <small class="form-text text-muted">Select the Deadline for this Goal.</small>
    </div>


     

    <div class="form-group form-horizontal">
        <label for="">Department Description:</label>
        <textarea type="text" value="@Model.Goal" class="form-control" /> <!--add Description-->
        <small class="form-text text-muted">Deadline of the Goal</small>
    </div>
    <input type="submit" />
</form>



