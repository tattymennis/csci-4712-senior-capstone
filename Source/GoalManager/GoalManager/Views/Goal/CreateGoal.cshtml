@using GoalManager.Models
@model CreateGoalViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Goal";
}

<h1>@ViewBag.Title</h1>

@*<div class="text-danger">
    @Html.ValidationSummary()
</div>*@

<form method="post">
    <div class="form-group form-horizontal">
        <label for="Title">Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Goal.Title" />
    </div>

    <div class="form-group form-horizontal">
        <label for="Description">Description</label>
        <textarea type="text" value="@Model.Goal" class="form-control">

        </textarea>
    </div>

    <div class="form-group form-horizontal">
        <label for="CategoryName">Category</label>
        @Html.DropDownListFor(x => x.CategoryName, Model.CatDropDown, new { Name = "CategoryName", Class = "form-control"})
    </div>

    <div class="form-group form-horizontal">
        <label for="QuarterTime">Quarter</label>
        @Html.DropDownListFor(x => x.QuarterTime, Model.CatDropDown, new { Name = "QuarterTime", Class = "form-control" })
    </div>

    @*<div class="form-group form-horizontal">
        <label for="CatRef">Category</label>

        @Html.DropDownListFor(x => x.Goal.CatRef, Model.CatDropDown, new { Name = "CatRef", Class = "form-control" })
    </div>

    <div class="form-group form-horizontal">
        <label for="QuartRef">Quarter</label>

        @Html.DropDownListFor(x => x.Goal.QuartRef, Model.QuartDropDown, new { Name = "QuartRef", Class = "form-control" })
    </div>*@



    <input type="submit" />
</form>



