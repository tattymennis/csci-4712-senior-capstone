@using GoalManager.Models;
@model UpdateGoalViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update Goal";
}

@Html.ValidationSummary()
<div>
    <h1>@ViewBag.Title</h1>
    <h2>Goal: @Model.Goal.Title</h2>
    <h3>Start Date: @Model.Goal.StartDate.ToString("D")</h3>
    <h3>End Date: @Model.Goal.EndDate.ToString("D")</h3>
</div>

@Html.AntiForgeryToken()
<form method="post">
    <div class="form-group form-horizontal">
        <label for="Subject">Reason for Update</label>
        <input type="text" class="form-control" name="Subject" value="@Model.Subject"/>
        <small class="form-text text-muted">Note: All users will see this for their respective Department criteria  </small>
    </div>
    <div class="form-group form-horizontal">
        <label for="Progress">Progress</label>
        <input type="number" class="form-control" name="Progress" value="@Model.Goal.Progress"/> <!--value="Model.Progress"-->
    </div>
    <div class="form-group form-horizontal">
        <label for="Notes">Notes</label>
        <textarea class="form-control" name="Notes" value="@Model.Notes" ></textarea>        
    </div>
<input type="submit"/>
</form>