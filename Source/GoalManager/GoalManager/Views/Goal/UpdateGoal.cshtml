@using GoalManager.Models;
@model UpdateGoalViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update Goal";
}



<h1>@ViewBag.Title</h1>

@Html.ValidationSummary();

<form method="post">
    <div class="form-group form-horizontal">
        <label for="Subject">Update Subject</label>
        <input type="text" class="form-control" name="Subject" value="@Model.Update.Subject"/>
        <small class="form-text text-muted">Note:All users will see this for their respective Department criteria  </small>
    </div>
    <div class="form-group form-horizontal">
        <label for="Progress">Progress</label>
        <input type="number" class="form-control" name="Progress" value="@Model.Update.Progress"/>
    </div>
    <div class="form-group form-horizontal">
        <label for="Notes">Notes</label>
        <textarea class="form-control" name="Notes" value="@Model.Update.Notes" ></textarea>
        
    </div>
<input type="submit"/>
</form>