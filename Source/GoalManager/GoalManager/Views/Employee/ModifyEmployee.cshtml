@using GoalManager.Models
@model ModifyEmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Modify Employee";
}
@Html.ValidationSummary()

<h1>@ViewBag.Title</h1>

<form method="post">
    <div class="form-group form-horizontal">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" value="@Model.Employee.FirstName" />
    </div>
    <div class="form-group form-horizontal">
        <label for="Lastname">Last Name</label>
        <input type="text" class="form-control" value="@Model.Employee.LastName" />
    </div>
    <div class="form-group form-horizontal">
        <label for="Email">Email</label>
        <input type="text" class="form-control" value="@Model.Employee.Email" />
        <small class="form-text">This will be used for login</small>
    </div>
    <div class="form-group form-horizontal">
        <label for="Title">Title</label>
        <input type="text" class="form-control" value="@Model.Employee.Title" />
        <small class="form-text">This is the Job position</small>
    </div>
    <div class="form-group">
        <label for="Department">Department:</label>
        <select class="form-control">
            <option>Accounting</option>
            <option>Quality Assurance</option>
            <option>Customer Support</option>
            <option>Administration</option>
            <option>Faculty</option>
        </select>
        <small class="form-text text-muted">Please Select the Department that the Employee is in.</small>
    </div>

    <div class="form-group">
        <label for="Role">Role</label>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="Status" id="exampleRadios1" value="option1" checked>
                Employee
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="Status" id="exampleRadios2" value="option2">
                Supervisor
            </label>
        </div>
        <small class="form-text text-muted">Is this Employee an Supervisor or a Regular Employee?</small>
    </div>
    <div class="form-group">
        <label for="Active">Active</label>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="Status" id="exampleRadios1" value="option1" checked>
                Active
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="Status" id="exampleRadios2" value="option2">
                InActive
            </label>
        </div>
        <small class="form-text text-muted">Is this Employee or not?</small>

    </div>

    <input type="submit" />
</form>