@using GoalManager.Models
@model ModifyEmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Modify Employee";
}
@Html.ValidationSummary()

<h1>@ViewBag.Title</h1>

<form method="post">
    
    <div class="form-group form-horizontal">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.Employee.FirstName" />
    </div>
    
    <div class="form-group form-horizontal">
        <label for="Lastname">Last Name</label>
        <input type="text" class="form-control" name="LastName" value="@Model.Employee.LastName" />
    </div>
    
    <div class="form-group form-horizontal">
        <label for="Email">Email</label>
        <input type="email" class="form-control" name="Email" value="@Model.Employee.Email" />  
    </div>

    <div class="form-group form-horizontal">
        <label for="Title">Employee Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Employee.Title" />
    </div>

    <div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" name="@Model.Employee.Role">
            <option selected="selected">Please Select Role</option>
            <option>Employee</option>
            <option>Supervisor</option>
            <option>Administrator</option>
        </select>
    </div>

    <div class="form-group">
        <!--//Html.DropDownListFor -->
        <label for="Department">Department:</label> <!-- and must add values to option values,This will be deprecated with a list of Deparments that exists from the database-->
        <select class="form-control" name="@Model.Employee.DID">
            <option selected="selected" value="0">Please Select Department</option>
            <option>Accounting</option>
            <option>Quality Assurance</option>
            <option>Customer Support</option>
            <option>Administration</option>
            <option>Faculty</option>
        </select> 
        </div> <!--Must Attach deparment to the this field for modify-->

        
        <div class="form-group">
            <label for="Active"> Currently Active</label>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="Active" id="exampleRadios1" value="0" checked>
                    Active
                </label>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="Active" id="exampleRadios2" value="1"option2">
                    InActive
                </label>
            </div>
            <small class="form-text text-muted">Is this Employee or not?</small>

        </div>

        <input type="submit" />
</form>