@using GoalManager.Models
@model CreateEmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Employee";
}

<h1>@ViewBag.Title</h1>

<div class="text-danger">
    @Html.ValidationSummary()
</div>
<form method="post">
    @Html.AntiForgeryToken()
    <div class="form-group form-horizontal">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.Employee.FirstName" />
    </div>

    <div class="form-group form-horizontal">
        <label for="Lastname">Last Name</label>
        <input type="text" class="form-control" name="LastName" value="@Model.Employee.LastName" />
    </div>

    <div class="form-group form-horizontal">
        <label for="Email">Email</label>
        <input type="email" class="form-control" name="Email" value="@Model.Employee.Email"/>
    </div>

    <div class="form-group form-horizontal">
        <label for="Title">Employee Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Employee.Title"/>
    </div>

    <div class="form-group form-horizontal">
        <label for="Role">Role</label>
        <select class="form-control" name="Role" value="@Model.Employee.Role">
            <option selected="selected">Select Role</option>
            <option value="Employee">Employee</option>
            <option value="Supervisor">Supervisor</option>
            <option value="Administrator">Administrator</option>
        </select>
    </div>

    <div class="form-group form-horizontal">
        <label for="DepRefChoice">Department</label>
        
            @Html.DropDownListFor(x => x.DepRefChoice, Model.DeptDropDown, new { Name = "DepRefChoice", Class = "form-control"})
    </div>


    <input type="submit" />
</form>

