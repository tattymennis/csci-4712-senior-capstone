@using GoalManager.Models
@model CreateEmployeeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Employee";
}

<h1>@ViewBag.Title</h1>

<div class="text-danger">
    @Html.ValidationSummary()
</div>
<form method="post">
    <div class="form-group form-horizontal">
        <label for="firstname">First Name</label>
        <input type="text" class="form-control" name="FirstName" value="@Model.Employee.FirstName" />
    </div>
    <div class="form-group form-horizontal">
        <label for="Lastname">Last Name</label>
        <input type="text" class="form-control" name="LastName" value="@Model.Employee.LastName" />
    </div>
    <div class="form-group form-horizontal">
        <label for="Email">Email</label>
        <input type="email" class="form-control" name="Email" value="@Model.Employee.Email"/>
    </div>
    <div class="form-group form-horizontal">
        <label for="Title">Employee Title</label>
        <input type="text" class="form-control" name="Title" value="@Model.Employee.Title"/>
    </div>

    <div class="form-group">
        <label for="Role">Role</label>
        <select class="form-control" name="@Model.Employee.Role" value="@Model.Employee.Role">
            <option selected="selected">Please Select Role</option>
            <option>Employee</option>
            <option>Supervisor</option>
            <option>Administrator</option>
        </select>
    </div>
    <div class="form-group">
        <!--//Html.DropDownListFor --> 
        <label for="Department">Department:</label> <!-- and must add values to option values,This will be deprecated with a list of Deparments that exists from the database-->
        <select class="form-control" name="@Model.Employee.DID">
            <option selected="selected" value="0">Please Select Department</option>
            <option>Administrators</option>
            <option>Accounting</option>
            <option>Human Resources</option>
            <option>Software</option>
            <option>Marketing</option>
            <option>Sales</option>
            <option>Purchasing</option>
            <option>R&D</option>
            <option>Administration</option>
            <option>Quality Assurance</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Active">Currently Active</label>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="@Model.Employee.Active" value="true" checked>
                Active
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input class="form-check-input" type="radio" name="@Model.Employee.Active"  value="false">
                Inactive
            </label>
        </div>
    </div>

    <input type="submit" />
</form>